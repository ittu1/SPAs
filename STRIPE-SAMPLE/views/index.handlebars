<section.py-2="py-2">
    <div class="row">
        <div class=".col-md-6.text-center">
            <h1 class="display-3 mt-3 pt-5">
                Sample Ebook
            </h1><p class="lead">This is sample text from the Ebook! Checkout with your card now!</p>
            <form action="/charge" method="POST">
                <script
                    src="https://checkout.stripe.com/checkout.js"
                    class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="2000"
                    data-name="Sample Company EBook"
                    data-description="EBook by Sample Company"
                    data-image="/img/marketplace.png"
                    data-locale="auto">
                </script>
            </form>
        </div>
        <div class="col-md-6">
            <img src="/img/cover.png" alt="" class="img-fluid">
        </div>
    </div>
</section>


